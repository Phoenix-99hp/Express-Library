<h1>{{title}}</h1>

<form method='POST' action=''>
    <div class='form-group'>
        <label for='first_name'>First Name:</label>
        <input id='first_name' class='form-control' type='text' placeholder='First name (Christian)' name='first_name'
            required='true' value={{#if author}}{{author.first_name}}{{else}}''{{/if}}>
    </div>
    <div class='form-group'>
        <label for='family_name'>Family Name:</label>
        <input id='family_name' class='form-control' type='text' placeholder='Family name (surname)' name='family_name'
            required='true' value={{#if author}}{{author.family_name}}{{else}}''{{/if}}>
    </div>
    <div class='form-group'>
        <label for='date_of_birth'>Date of birth:</label>
        <input id='date_of_birth' class='form-control' type='date' name='date_of_birth'
            value={{#if author}}{{#dateSliceAuthor author.date_of_birth}}{{/dateSliceAuthor}}{{else}}''{{/if}}>
    </div>
    <div class='form-group'>
        <label for='date_of_death'>Date of death:</label>
        <input id='date_of_death' class='form-control' type='date' name='date_of_death'
            value={{#if author}}{{#dateSliceAuthor author.date_of_death}}{{/dateSliceAuthor}}{{else}}''{{/if}}>
    </div>
    <button class='btn btn-primary' type='submit'>Submit</button>
</form>

{{#if errors}}
<ul>
    {{#each errors}}
    <li>{{this.msg}}</li>
    {{/each}}
</ul>
{{/if}}